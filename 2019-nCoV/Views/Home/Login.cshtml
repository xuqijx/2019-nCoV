
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>奥海科技新型肺炎防控信息统计表</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="~/layui-v2.5.6/layui/css/layui.css" rel="stylesheet" media="all" />
</head>
<body>
    <h2 align="center" style="margin-top:10px">奥海科技疫情防控防疫信息报备登记表</h2>
    <form class="layui-form" style="margin: 0 auto;max-width: 315px;padding-top: 40px;">
        <div class="layui-form-item">
            <div class="layui-input-block">
                <input type="radio" name="choose" value="返岗入住园区人员" title="返岗入住园区人员" checked="">
                <input type="radio" name="choose" value="未返岗人员" title="未返岗人员">
            </div>
        </div>
        <div class="layui-form-item" style="margin-top:20px">
            <div class="layui-input-block">
                <button class="layui-btn" type="button" id="commit">
                    &emsp;确定&emsp;
                </button>
            </div>
        </div>
    </form>


    <script src="~/layui-v2.5.6/layui/layui.js" charset="utf-8"></script>
    <script>
        layui.use(['layer', 'form'], function () {
            var $ = layui.$
                , layer = layui.layer
                , form = layui.form;

             $('#commit').on('click', function () {
                if ($("input[name=choose][value='返岗入住园区人员']").is(':checked')) {
                    window.location.href = "@Url.Action("Index2","Home")";
                }
                else {
                     window.location.href = "@Url.Action("Index1","Home")";
                }
                $('html,body').animate({scrollTop: '0px'}, 800);
             });
        });
    </script>

</body>
</html>
